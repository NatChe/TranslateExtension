 {
    "name": "Get word meaning Extension",
    "version": "0.1",
    "description": "Get a single a word translation in order to improve your vocabulary while learning a foreign language",
    "manifest_version": 2,
    "permissions": ["storage"],
    "icons": {
      "16": "assets/images/logo_ext_16.png",
      "32": "assets/images/logo_ext_32.png",
      "48": "assets/images/logo_ext_48.png",
      "128": "assets/images/logo_ext_128.png"
    },
    "browser_action": {
      "default_popup": "browser/popup.html",
      "default_title": "Double click on the word you want to translate",
      "default_icon": {
        "16": "assets/images/logo_ext_16.png",
        "32": "assets/images/logo_ext_32.png",
        "48": "assets/images/logo_ext_48.png",
        "128": "assets/images/logo_ext_128.png"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }]
  }